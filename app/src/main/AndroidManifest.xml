<manifest package="ru.yandex.diskclient"
          xmlns:android="http://schemas.android.com/apk/res/android">

	<uses-permission android:name="android.permission.INTERNET"/>

	<application
		android:name=".app.DiskApplication"
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:supportsRtl="true"
		android:theme="@style/AppTheme">

		<activity android:name=".activity.splash.Splash">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>

				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>

		<activity
			android:name=".activity.login.Login"
			android:label="@string/activity_login_title"/>

		<activity
			android:name=".activity.directorylist.DirectoryList"
			android:label="@string/activity_directory_list_title"/>

		<activity
			android:name=".activity.profile.Profile"
			android:label="@string/activity_profile_title"/>

	</application>

</manifest>
